{block content}

                <div class="thumbnail">
                    <img class="img-responsive" src="../../images/products/{$products['photo'][$id]}" alt="product">
                    <div class="caption-full">
                        <h4 class="pull-right">{$products['prize'][$id]|number} Kƒç</h4>
                        <h4><a>{$products['title'][$id]}</a></h4>
                        <p>{$products['body'][$id]}</p>
                    </div>
                    <div class="ratings">
                        <p class="pull-right">{$products['reviews'][$id]} reviews</p>
                        <p>
                            {for $j=0; $j<5; $j++}
                                <span class="glyphicon glyphicon-star{if $j>=$products['stars'][$id]}-empty{/if}"></span>
                            {/for}
                            {$products['stars'][$id]}.0 stars
                        </p>
                    </div>
                </div>

                <div class="well">

                    <div class="text-right">
                        <a class="btn btn-success">Leave a Review</a>
                    </div>

                    <hr>

                    <div class="row">
                        <div class="col-md-12">
                            <span class="glyphicon glyphicon-star"></span>
                            <span class="glyphicon glyphicon-star"></span>
                            <span class="glyphicon glyphicon-star"></span>
                            <span class="glyphicon glyphicon-star"></span>
                            <span class="glyphicon glyphicon-star-empty"></span>
                            Anonymous
